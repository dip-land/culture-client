{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "tests/**/*"
    ]
}